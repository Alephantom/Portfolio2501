---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Neurons-Lab',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Portfolio', href: '/' },
        { text: 'Resume', href: '/cv' },
        { text: 'Contact', href: '/contact' },
      ]}
      actions={[
        {
          text: 'Let’s connect',
          href: '/contact',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <Hero>
    <Fragment slot="image">
      <iframe
        src="https://www.loom.com/embed/f78d06f70b634f89a785aa97f8b032be?sid=91457177-9828-41fd-ad16-adb448983e52"
        title="Just one click away"
        allowfullscreen
        class="w-full h-64 md:h-96 rounded-xl shadow-lg"
      >
      </iframe>
    </Fragment>
  </Hero>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Give me a call"
    subtitle="And let’s see if we are a match"
    items={[
      {
        title: 'Email',
        description: 'birkneranna@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Call me',
        description: '+34 640 76 79 94',
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
